{
  "compilerOptions": {
    "target": "es5",                               
    "lib": ["es6"],                     // Quais recursos das versões do JS serão usadas                          
    "experimentalDecorators": true,     // Obrigatório pra uso com TypeORM              
    "emitDecoratorMetadata": true,      // Obrigatório pra uso com TypeORM              
    "module": "commonjs",                             
    "moduleResolution": "node",                       
    "resolveJsonModule": true,                        
    "allowJs": true,
    "outDir": "build",                 // Nome da pasta onde será gerado o arquivo transpilado do TS para JS              
    "rootDir": "src",
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,         
    "strict": true,                                   
    "strictPropertyInitialization": false,   // False vai retirar a obrigação de definir o valor dos atributos em um método construc         
    "noImplicitThis": true,
    "baseUrl": "./",
    "paths": {
      "@config/*":  ["src/config/*"],
      "@modules/*": ["src/modules/*"],
      "@shared/*":  ["src/shared/*"]
    }         
  }  
}
